{% schema %}
{
  "name": "Shop Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by category"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop Categories"
    }
  ]
}
{% endschema %}

<div class="shop-by__container container">
  <!-- title -->
  <div class="shop-by__title">
    <h2>{{ section.settings.heading }}</h2>
  </div>

  <!-- items -->
  <div class="shop-by__items">
    {% for block in section.blocks %}
      <div class="shop-by__item">
        <a href="{{ block.settings.link }}" class="shop-by__link">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 93, height: 90 }}" alt="{{ block.settings.title }}" width="100" height="100" />
          {% else %}
            <img src="https://picsum.photos/100/100" alt="Placeholder" width="100" height="100" />
          {% endif %}
          <span>{{ block.settings.title }}</span>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .shop-by__title {
    font-weight: bold;
  }
  .shop-by__container .shop-by__items {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }
  .shop-by__container .shop-by__link {
    display: flex;
    align-items: center;
    flex-direction: column;
    text-decoration: none;
    color: var(--color-primary);
  }

  .shop-by__container .shop-by__link span {
    margin-top: 6px;
  }
</style>
