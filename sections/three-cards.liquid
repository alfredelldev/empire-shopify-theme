{% schema %}
{
  "name": "Three Cards",
  "settings": [],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Recommended size: 432x400"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Card Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#f9f9f9"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#333333"
        },
        {
          "type": "number",
          "id": "image_height",
          "label": "Image Height (px)",
          "default": 400,
          "info": "Set the height of the image in pixels. Width will adjust automatically."
        },
        {
          "type": "number",
          "id": "content_height",
          "label": "Content Minimum Height (px)",
          "info": "Set the height of the image in pixels. Width will adjust automatically."
        },
        {
          "type": "number",
          "id": "spacing",
          "label": "Spacing Between Image and Title (px)",
          "default": 0,
          "info": "Set the spacing between the image and title in pixels."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Three Cards",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="three-cards-section container">
  <div class="cards-container">
    {% for block in section.blocks %}
      <div class="card" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {% assign image_height = block.settings.image_height | default: 400 %}
          {% assign image_url = block.settings.image | image_url: width: 432 %}
          {% comment %} {% assign image_aspect_ratio = block.settings.image.aspect_ratio %} {% endcomment %}
          {% comment %} {% assign image_width = image_height | times: image_aspect_ratio %} {% endcomment %}

          <div class="card-image" style="margin-bottom: {{ block.settings.spacing }}px;">
            <img
              src="{{ image_url }}"
              alt="{{ block.settings.title | escape }}"
              style="height: {{ image_height }}px; width: auto;"
              loading="lazy"
              height=""
              width=""
            >
          </div>
        {% endif %}
        <div
          class="card-content"
          style="background-color: {{ block.settings.background_color }}; color: {{ block.settings.text_color }}; min-height: {{ block.settings.content_height }}"
        >
          <h3 class="card-title">{{ block.settings.title }}</h3>
          <p class="card-description">{{ block.settings.description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .three-cards-section {
    margin-top: 60px;
    margin-bottom: 60px;
  }

  .cards-container {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    justify-content: center;
  }

  .card {
    flex: 1 1 calc(33.333% - 48px);
    overflow: hidden;
    text-align: left;
  }

  .card-image img {
    display: block;
    margin: 0 auto;
  }

  .card-content {
    padding: 32px 20px;
  }

  .card-title {
    font-size: 18px;
    margin: 0 0 10px;
  }

  .card-description {
    font-size: 14px;
    margin: 0;
  }

  @media (max-width: 768px) {
    .card {
      flex: 1 1 calc(50% - 24px);
      max-width: calc(50% - 24px);
    }
  }

  @media (max-width: 480px) {
    .card {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }
</style>
