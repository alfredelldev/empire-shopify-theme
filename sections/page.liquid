{% schema %}
{
  "name": "Page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Page Title",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "text-banner",
      "name": "Text Banner",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "Heading Title"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Page"
    }
  ]
}
{% endschema %}

<article class="site-page" data-template-page>
  {% if section.settings.show_title %}
    <header class="page-masthead">
      <h1 class="page-title">
        {{ page.title }}
      </h1>
    </header>
  {% endif %}

  {%- unless page.content == blank -%}
    {% assign content = page.content %}
    {% assign parts = content | split: "<h5>" %}
  
    <div class="page-content rte">
      {% for part in parts %}
        {% if part contains "</h5>" %}
          {% assign title_and_content = part | split: "</h5>" %}
  
          <!-- Remove extracted content -->
          {% assign title = "<h5>" | append: title_and_content[0] | append: "</h5>" %}
          {% assign content_part = title_and_content[1] %}
          {% assign content = content | remove: title | remove: content_part %}
        {% endif %}
      {% endfor %}
  
      <!-- Show remaining content (excluding accordion sections) -->
      {{- content -}}
  
      <!-- Render accordion with extracted content -->
      {% render 'accordion', source: page.content %}
    </div>
  {%- endunless -%}

  {% for block in section.blocks %}
    {% if block.type == "text-banner" %}
      <div class="text-banner__container container">
        <h1>{{ block.settings.heading }}</h1>
        <p>{{ block.settings.description }}</p>
        <a href="{{ block.settings.button_link }}" class="btn">{{ block.settings.button_text }}</a>
      </div>
    {% endif %}
  {% endfor %}
</article>
