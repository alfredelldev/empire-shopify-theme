{% schema %}
{
  "name": "Brand Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Brands"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Easy to use, stylish placeholders. Just add your desired image size (width & height) after our URL, and you'll get a random image."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Brand Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "brand_url",
          "label": "Brand URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Slider"
    }
  ]
}
{% endschema %}

<div class="container">
  <div>
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
  </div>

  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          {% if block.settings.image %}
            <a href="{{ block.settings.brand_url }}">
              <img
                src="{{ block.settings.image | image_url: width: 100, height: 100 }}"
                alt="Brand Image"
                width="100"
                height="100"
              >
            </a>
          {% else %}
            <a href="{{ block.settings.brand_url }}">
              <img src="https://picsum.photos/100/100" alt="Placeholder Image" width="100" height="100">
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<style>
  .swiper {
    width: 100%;
    height: 100px;
  }
  .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    max-width: 100px;
    max-height: 100px;
    object-fit: cover;
  }
  .swiper-button-next,
  .swiper-button-prev {
    color: #1d1d1f;
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.mySwiper', {
      slidesPerView: 4,
      spaceBetween: 0,
      freeMode: true,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        640: {
          slidesPerView: 8,
          spaceBetween: 4,
        },
        768: {
          slidesPerView: 8,
          spaceBetween: 4,
        },
        1024: {
          slidesPerView: 12,
          spaceBetween: 4,
        },
      },
    });
  });
</script>
