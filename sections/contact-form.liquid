{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign contact_form_class = 'isolate contact-form'
  if settings.animations_reveal_on_scroll
    assign contact_form_class = 'isolate scroll-trigger animate--slide-in contact-form'
  endif
-%}

<div class="container">
  <div class="contact page-width page-width--narrow section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="title title-wrapper--no-top-margin inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- else -%}
      <h2 class="visually-hidden">{{ 'contact.form.title' | t }}</h2>
    {%- endif -%}

    <div class="contact-form-container d-flex align-items-start">
      {%- form 'contact', id: 'ContactForm', class: contact_form_class -%}
        {%- if form.posted_successfully? -%}
          <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
            {{- 'icon-success.svg' | inline_asset_content -}}
            {{ 'contact.form.post_success' | t }}
          </h2>
        {%- elsif form.errors -%}
          <div class="form__message">
            <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
              {{- 'icon-error.svg' | inline_asset_content -}}
              {{ 'contact.form.error_heading' | t }}
            </h2>
          </div>
          <ul class="form-status-list caption-large" role="list">
            <li>
              <a href="#ContactForm-email" class="link">
                {{ form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email }}
              </a>
            </li>
          </ul>
        {%- endif -%}
        <div class="form-fields-inline">
          <div class="form-field w-50">
            <input
              class="field__input form-field-input form-field-text"
              autocomplete="name"
              type="text"
              id="ContactForm-first_name"
              name="contact[{{ 'contact.form.first_name' | t }}]"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            >
            <label class="field__label form-field-title" for="ContactForm-first_name">
              {{- 'contact.form.first_name' | t -}}
            </label>
          </div>

          <div class="form-field w-50">
            <input
              class="field__input form-field-input form-field-text"
              autocomplete="name"
              type="text"
              id="ContactForm-last_name"
              name="contact[{{ 'contact.form.last_name' | t }}]"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            >
            <label class="field__label form-field-title" for="ContactForm-last_name">
              {{- 'contact.form.last_name' | t -}}
            </label>
          </div>
        </div>

        <div class="form-fields-inline">
          <div class="field form-field field--with-error w-50">
            <input
              autocomplete="email"
              type="email"
              id="ContactForm-email"
              class="field__input form-field-input form-field-text"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
              {% endif %}
            >
            <label class="field__label form-field-title" for="ContactForm-email">
              {{- 'contact.form.email' | t }}
              <span aria-hidden="true">*</span></label
            >
            {%- if form.errors contains 'email' -%}
              <small class="contact__field-error" id="ContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">
                  <span class="svg-wrapper">
                    {{- 'icon-error.svg' | inline_asset_content -}}
                  </span>
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </span>
              </small>
            {%- endif -%}
          </div>

          <div class="field form-field w-50">
            <input
              type="tel"
              id="ContactForm-phone"
              class="field__input form-field-input form-field-text"
              autocomplete="tel"
              name="contact[{{ 'contact.form.phone' | t }}]"
              pattern="[0-9\-]*"
              value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
            >
            <label class="field__label form-field-title" for="ContactForm-phone">{{ 'contact.form.phone' | t }}</label>
          </div>
        </div>

        <div class="field form-field">
          <textarea
            rows="10"
            id="ContactForm-body"
            class="text-area field__input form-field-input form-field-textarea"
            name="contact[{{ 'contact.form.comment' | t }}]"
          >
                {{- form.body -}}
              </textarea>
          <label class="form__label field__label form-field-title" for="ContactForm-body">
            {{- 'contact.form.comment' | t -}}
          </label>
        </div>

        <div class="contact__button">
          <button type="submit" class="button-primary contact-form-button">
            {{ 'contact.form.send' | t }}
          </button>
        </div>
      {%- endform -%}

      <div class="contact-form-content">
        {% comment %} <p>
          We are proudly; a family owned and operated company, from right here in Australia. Our local touch gives us
          that edge, when combined with our extensive range and most importantly our commitment to providing excellent
          service.
        </p>

        <p class="d-flex flex-col gap-10">
          <span>Phone: <a href="tel:1800882583">1800-88-BLUE</a></span>
          <span>Email: <a href="mailto:sales@blueleafbath.com.au">sales@blueleafbath.com.au</a></span>
          <span>24/7 Online Chat</span>
        </p>

        <br>

        <p class="d-flex flex-col gap-10">
          <strong>Showroom opening hours</strong>

          <span>Monday - Saturday: By Appointment</span>
          <span>Sunday: Closed</span>
        </p> {% endcomment %}

        {{ section.settings.description }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "description",
      "label": "Contact Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.contact-form.settings.title.default",
      "label": "t:sections.contact-form.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
