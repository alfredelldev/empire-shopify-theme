<style>
  .google-map-section {
    width: 100%;
    margin: 60px auto 0;
  }

  iframe {
    display: block;
  }
</style>


<div class="google-map-section">
  {% if section.settings.map_embed_url != blank %}
    <iframe
      src="{{ section.settings.map_embed_url }}"
      width="100%"
      height="{{ section.settings.map_height }}"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    >
    </iframe>
  {% else %}
    <p>Please add a Google Map embed URL in the section settings.</p>
  {% endif %}
</div>


{% schema %}
{
  "name": "Google Map",
  "settings": [
    {
      "type": "text",
      "id": "map_embed_url",
      "label": "Google Map Embed URL",
      "info": "Paste the embed URL from Google Maps. Example: https://www.google.com/maps/embed?pb=..."
    },
    {
      "type": "range",
      "id": "map_height",
      "label": "Map Height",
      "min": 200,
      "max": 800,
      "step": 10,
      "default": 400,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Google Map"
    }
  ]
}
{% endschema %}
